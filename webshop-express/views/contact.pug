extends layout

block content
  link(href='/stylesheets/contact.css', rel='stylesheet')
  .container-fluid.p-0#contact  
    .section-content.p-0
      h1.section-header Get in touch with us:
    .contact-section.p-0
      .row.justify-content-center
        .col-sm-10.col-md-5.col-lg-4
          form(action='mailto:jnmako@gmail.com', method='POST', enctype="text/plain")
            .form-group
              label(for='name') Name
              input.form-control(type='text', name='name', id='name', placeholder='name')
            .form-group
              label(for='email') Email
              input.form-control(type='email', name='email', id='email', placeholder='email')
            .form-group
              label(for='phone') Phone 
              input.form-control(type='tel', name='phone', id='phone', placeholder='phone number')
        .col-sm-10.col-md-5.col-lg-4.offset-lg-1
          .form-group
            label(for='subject') Subject
            input.form-control(type='text', name='subject', id='subject' placeholder='subject')
          .form-group
            label(for='message')  Message
            textarea.form-control(name='message', placeholder='Enter your message')
          div
            button.btn.btn-sm.btn-alien.submit(type='submit', onclick='mailUs') Send