extends layout

block content
  link(href='/stylesheets/contact.css', rel='stylesheet')
  .container-fluid.p-0#contact  
    .section-content.p-0
      h1.section-header Get in touch with us:
    .contact-section.p-0.m-5
      script
        include ../public/javascripts/contact.js  
      form(method='POST')
        .row.justify-content-center
          .col-sm-10.col-md-5.col-lg-4
            .form-group
              label(for='name') Name
              input.form-control.emailText(type='text', name='name', id='name', placeholder='name')
            .form-group
              label(for='email') Email
              input.form-control.emailText(type='email', name='email', id='email', placeholder='email')
            .form-group
              label(for='phone') Phone 
              input.form-control.emailText(type='tel', name='phone', id='phone', placeholder='phone number')
          .col-sm-10.col-md-5.col-lg-4.offset-lg-1  
            .form-group
              label(for='subject') Subject
              input.form-control.emailText(type='text', name='subject', id='subject' placeholder='subject')
            .form-group
              label(for='message')  Message
              textarea.form-control.emailText(name='message', placeholder='Enter your message')
            div.mb-5
              button.btn.btn-sm.btn-alien.submit(type='submit', onclick="mailUs(event)") Send