extends layout

block content
  body#productsPageBackground
    .container
      .row
        .col-10
          .card
            .card-header
              img.card-img-top(src='/images/productimages/food2.jpg')
            .card-body
              table(width='100%', cellpadding='0', cellspacing='0')
                tr.text-center
                  td#addToBasketWithIcon
                    img(src="/images/icons/shopping-cart.png", width="50px", height="auto")
                    p Add to basket
                  td
                    h4 #{product.productName}
                    h6 Food category: #{product.type}
                    h5 Now only for $#{product.price}
                  td
                    h1 8.75
                    span
                      img(src="/images/icons/rocket.png" , width="20px", height="auto")
                      img(src="/images/icons/rocket.png" , width="20px", height="auto")
                      img(src="/images/icons/rocket.png" , width="20px", height="auto")
                      img(src="/images/icons/rocket.png" , width="20px", height="auto")
                      img(src="/images/icons/rocketDesaturated.png" , width="20px", height="auto")
                      em(style='width: 91%')
                    br
                    small (320 ratings)