extends layout

block content
  link(href='/stylesheets/productDetails.css', rel='stylesheet')
  .container
    .row.m-5
      .col-12
        .card
          .card-body
            .row
              .col-lg-6.col-sm-12.text-center
                img.card-img-top.img-fluid(src="/images/background/comida-tradicional-chilena-nomadicchica.com-6.jpg", style="width:400px;height:350px;")
              .col-lg-6.col-sm-12           
                h4 #{product.productName}
                h6 Food category: #{product.type}
                h1 8.75                   
                span
                  img(src="/images/icons/rocket.png" , width="20px", height="auto")
                  img(src="/images/icons/rocket.png" , width="20px", height="auto")
                  img(src="/images/icons/rocket.png" , width="20px", height="auto")
                  img(src="/images/icons/rocket.png" , width="20px", height="auto")
                  img(src="/images/icons/rocketDesaturated.png" , width="20px", height="auto")
                  em(style='width: 91%')
                br
                small (320 ratings)
                h5 Now only for $#{product.price}          
                #addToBasketWithIcon
                  if loggedcustomer
                    form(action=`/basket/add/${product.id}` method='post')
                      .form-group
                        label Quantity :
                        input.form-control(type='number', name='orderQuantity', value=1 , min=1, style="width:50px") 
                        br
                        button.btn Add to basket 
                          img.m-1(src="/images/icons/shopping-cart.png", width="30px", height="auto")
                  else
                    p.text-danger Please log in to order !
                  
                
