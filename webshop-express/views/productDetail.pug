extends layout

block content
  .container
    .row
      .col-12
        .card
          .card-header
          if loggedcustomer
            form(action=`/basket/add/${product.id}` method='post')
              input(type='number', name='orderQuantity' value=1 min=1)
              button.btn.btn-primary Add to basket
              img.card-img-top(src='/images/food1.jpg')
          else
            p Please log in to order
            img.card-img-top(src='/images/food1.jpg')
          .card-body
            table(width='100%', cellpadding='0', cellspacing='0')
              tr
                td
                  img(src="/images/icons/shopping-cart.png", width="50px", height="auto")
                  p Add to basket
                td
                  h3 #{product.productName}
                td  Food category: #{product.type}
                td  #{product.price}
                  h1 9.75
                  span.stars
                    em(style='width: 91%')
                  br
                  small (320 ratings)
              
