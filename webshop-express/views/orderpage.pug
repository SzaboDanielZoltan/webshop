extends layout

block content
  link(href='/stylesheets/orderpage.css', rel='stylesheet')
  .container
    .row.text-center.p-0
      h1#headingText Please check your order:
      .col-12#orderDiv
        table.table.text-center
          thead
             tr
               th Product name
               th Details
               th Unit price
               th Total price
               th #
          tbody
            each product in order
              tr
                td #{product.productName}
                td
                  a#productDetailsLink(href=`${product.url}`) Details
                td #{product.price}
                td #{product.amount}
                td #{product.amount*product.price}
            tr
              td
              td
              td
              td
              td#totalPriceText Total price: #{total}
        .row#orderFooter.text-center
          .col-6.text-left.pl-5
            h6 Name:&nbsp;
              span #{loggedcustomer.firstName} #{loggedcustomer.lastName}
            h6 Address:&nbsp;
              span #{loggedcustomer.address}
          .col-6.text-right.pr-5
           a.btn#addMoreBtn(href='/products') Add more
           a.btn#orderBtn(href='/orders/neworder') Order
           