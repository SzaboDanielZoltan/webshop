extends layout

block content
    link(href='/stylesheets/login.css', rel='stylesheet')
    if (success)
      .alert.alert-success #{success}
    .container.login-container
      .row
        form.col-md-6.login-form(action='/login' method='post')
          h3 Login
          .form-group
            input.form-control(name='email' type='text' placeholder='email')
          .form-group
            input.form-control(name='password' type='password' placeholder='password')
          br
          .form-group
            input.btnSubmit(type='submit', value='Login')
          .form-group
            a.btnForgetPwd(href='#') Forget Password?
        form.col-md-6.registration-form
          .login-logo
            img(src='https://image.ibb.co/n7oTvU/logo_white.png', alt='')
          h3 Register
          .form-group
            input.form-control(disabled)
          .form-group
            input.form-control(disabled)
          br  
          .form-group
           a.btn.btnSubmit(href="/register") Register
